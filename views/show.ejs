<% include ./partials/header %>
    <div class="container">
        <div class="ui piled segment">
            <h1 id="main-header">Mongo Scrapper</h1>

            <p id="main-footer">New Yok Times Edition</p>
        </div>

        <% savedArticle.forEach((article) => { %> -->
            <div class="ui grid">
                <div class="twelve wide column centered">
                    <div class="ui yellow segment">
                        <h1 class="article-results">
                            <a href="<%= article.link %>">
                                <%= article.link %>
                            </a>
                        </h1>
                        <div class="ui grid">
                            <div class="twelve wide column centered">
                                <hr>
                            </div>
                            <div class="ten wide column">
                                <p class="article-body">
                                    <%= article.body %>
                                </p>
                            </div>
                            <div class="one wide column">
                                <form action="/articles/saved/<%= article._id %>?_method=PUT" method="POST">
                                    <button class="ui yellow basic button right floated">Add Comment</button>
                                </form>
                            </div>
                            <div class="one wide column">
                                <form action="/articles/saved/<%= article._id %>?_method=PUT" method="POST">
                                    <button class="ui yellow basic button right floated">Delete Comment</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>

    <% include ./partials/footer %>